cmake_minimum_required(VERSION 3.8)

project(boost-download NONE)

include(ExternalProject)
ExternalProject_Add(
    Boost
    URL https://sourceforge.net/projects/boost/files/boost/${BOOST_REQUESTED_VERSION}/boost_${BOOST_REQUESTED_VERSION_UNDERSCORE}.zip/download
    UPDATE_COMMAND ""
    CONFIGURE_COMMAND ./bootstrap.sh --prefix=${BOOST_ROOT_DIR}
    BUILD_COMMAND ./b2 ${BOOST_MAYBE_STATIC} --prefix=${BOOST_ROOT_DIR} ${BOOST_COMPONENTS_FOR_BUILD} install
    BUILD_IN_SOURCE true
    INSTALL_COMMAND ""
    INSTALL_DIR ${BOOST_ROOT_DIR}
)